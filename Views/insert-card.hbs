<!DOCTYPE html>
<html>
  <head>
    <title>Insert Card</title>
  </head>
  <body>
    <h1>Insert Card</h1>
    <form action="/insert-card" method="POST">
      <label for="image">Image URL:</label>
      <input type="text" id="image" name="image" required>

      <label for="heading">Heading:</label>
      <input type="text" id="heading" name="heading" required>

      <label for="semiHeading">Semi Heading:</label>
      <input type="text" id="semiHeading" name="semiHeading" required>

      <label for="fullContent">Full Content:</label>
      <textarea id="fullContent" name="fullContent" required></textarea>

      <input type="submit" value="Submit">
    </form>
  </body>
</html>
